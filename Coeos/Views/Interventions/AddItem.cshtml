@model Coeos.Models.ViewsModels.AddInterventionItemViewModel

@{
    ViewData["Title"] = "Ajouter un agent à l'intervention " + Model.Intervention.Libelle;
}

<form asp-controller="Interventions" asp-action="AddItem" method="post">
    <div class="form-group">
        <label asp-for="AgentID"></label>
        <select asp-for="AgentID" asp-items="Model.Agents"></select>
        <span asp-validation-for="AgentID"></span>
    </div>

    <input type="hidden" name="InterventionId" value="@Model.Intervention.Id" />
    <input type="submit" value="Ajouter un agent" />
</form>
